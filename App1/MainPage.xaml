        </TextBlock>
        <Button x:Name="button2" Content="Button 2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="200,0,0,0" Click="button2_Click"/>
        <TextBox x:Name="output2" HorizontalAlignment="Left" Margin="778,447,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>

    </Grid>
</Page>
